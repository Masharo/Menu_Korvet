<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_noteitem_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textview_menuitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="5dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Тестовый текст"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_item_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/textview_menuitem_title" />

        <TextView
            android:id="@+id/textview_menuitem_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_marginVertical="5dp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="5dp"
            android:text="Тестовый текст"
            app:layout_constraintTop_toBottomOf="@id/textview_menuitem_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>